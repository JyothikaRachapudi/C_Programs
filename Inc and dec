#include <stdio.h>
int main()
{
    int arr[]={10,20,30,40,50};
    int *ptr=arr;
    //postfix
    printf("Initial pointer point to:%d\n",*ptr);
    printf("increment of a pointer variable:%d\n",*(ptr++));
    printf("now pointer points to variable:%d\n",*ptr);
    //prefix
    printf("increment of a pointer variable:%d\n",*(++ptr));
    printf("now pointer points to variable:%d\n",*ptr);
    //postfix dec 
    printf("decrement of a pointer variable:%d\n",*(ptr--));
    printf("now pointer points to variable:%d\n",*ptr);
    //prefix dec 
    printf("increment of a pointer variable:%d\n",*(--ptr));
    printf("now pointer points to variable:%d\n",*ptr);
    return 0;
}
